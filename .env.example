# Resonance.ai Breakout Scanner - Environment Configuration
# Copy this file to .env and update with your settings

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
POSTGRES_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql://scanner_user:secure_password_change_me@postgres:5432/resonance_scanner

# =================================================================
# APPLICATION SETTINGS
# =================================================================
NODE_ENV=production
PORT=5000
DEFAULT_SCAN_MODE=fast
MAX_CONCURRENT_SCANS=10

# =================================================================
# DISCORD INTEGRATION (Optional)
# =================================================================
# Get webhook URL from Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# =================================================================
# EMAIL ALERTS (Optional)
# =================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =================================================================
# SECURITY SETTINGS
# =================================================================
# Generate a random secret key for session management
SESSION_SECRET=change_this_to_a_random_string

# =================================================================
# PERFORMANCE TUNING
# =================================================================
# Adjust based on your server capabilities
SCAN_INTERVAL_MS=5000
MAX_ALERTS_HISTORY=1000
CLEANUP_INTERVAL_HOURS=24